@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Home Page";
    var ClientId = Configuration["Strava:ClientId"];
}

<div class="jumbotron">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <h1>Welcome, @User.Identity.Name</h1>

        <p>
            @foreach (var claim in Context.User.Claims)
            {
                <div><code>@claim.Type</code>: <strong>@claim.Value</strong></div>
            }
        </p>

        <p>
            <a class="btn btn-lg btn-danger" href="/signout?returnUrl=%2F">Sign out</a>
        </p>

        <p>
            <a class="btn btn-lg btn-danger" href="http://www.strava.com/oauth/authorize?client_id=@ClientId&response_type=code&redirect_uri=https://localhost:7293/exchange_token&approval_prompt=force&scope=profile:read_all">Get Token</a>
        </p>

        <p>
            <a class="btn btn-lg btn-danger" href="/athlete/stats">Athlete Stats</a>
        </p>
    }

    else
    {
        <h1>Welcome, anonymous</h1>
        <a class="btn btn-lg btn-success" href="/signin?returnUrl=%2F">Sign in</a>
    }
</div>
